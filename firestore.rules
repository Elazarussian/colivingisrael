rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    // We check the role in the 'profiles' collection
    function isAdmin() {
      let profilePath = /databases/$(database)/documents/profiles/$(request.auth.uid);
      return request.auth != null && exists(profilePath) && get(profilePath).data.role == 'admin';
    }

    // Profiles collection - user profile data
    match /profiles/{userId} {
      // Users can read their own profile, OR admins can read any profile
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();

      // Users can create/update their own profile
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId
                            && request.resource.data.uid == userId; // Ensure uid matches

      // Allow admins to delete profiles (e.g., when an admin removes a user)
      allow delete: if isAdmin();
      // Optionally, allow users to delete their own profile (uncomment if desired)
      // allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Registration Questions collection
    match /newUsersQuestions/{questionId} {
      // Everyone can read questions (needed for registration form)
      allow read: if true;
      
      // Only admins can write (create, update, delete)
      allow write: if isAdmin();
    }

    // User Personal Data Questions collection
    match /userPersonalDataQuestions/{questionId} {
      // Everyone can read questions (needed for user profile forms)
      allow read: if true;
      
      // Only admins can write (create, update, delete)
      allow write: if isAdmin();
    }
    
    // Maskir Questions collection
    match /maskirQuestions/{questionId} {
      // Everyone can read questions (needed for onboarding and admin UI)
      allow read: if true;

      // Only admins can write (create, update, delete)
      allow write: if isAdmin();
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
